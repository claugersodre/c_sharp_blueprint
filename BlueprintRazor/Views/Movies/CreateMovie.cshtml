@model Movie
@{
    ViewData["Title"] = "Create New Movie";
}

<h1>Create a new movie</h1>

<form asp-action="CreateMovie" asp-controller="Movies" method="post">
    <div class="form-group">
        <label for="Title">Title:</label>
        <input asp-for="Title" type="text" class="form-control" id="Title" name="Title">
    </div>
    <div class="form-group">
        <label for="Genre">Genre:</label>
        <input asp-for="Genre" type="text" class="form-control" id="Genre" name="Genre">
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input asp-for="Price" type="text" class="form-control" id="Price" name="Price">
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Create</button>
    <button asp-action="Movie" asp-controller="Movie" class="btn btn-secondary">Cancel</button>
</form>
